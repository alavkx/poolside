{
  "name": "agent-workflow-cli",
  "version": "2.0.0",
  "description": "CLI tool for automating workflows with productivity tools like JIRA and GitHub - designed for agents",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "bin": {
    "agent-workflow": "./dist/index.js"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@ai-sdk/openai": "^0.0.66",
    "ai": "^3.4.32",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.1",
    "date-fns": "^3.2.0",
    "jira-client": "^8.2.2",
    "markdown-table": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8"
  },
  "keywords": [
    "workflow",
    "automation",
    "github",
    "jira",
    "ai",
    "cli",
    "agent",
    "productivity"
  ],
  "author": "",
  "license": "MIT"
} 
