{
  "name": "poolside",
  "version": "0.2.0",
  "description": "CLI tool for automating workflows with productivity tools like JIRA and GitHub - poolside automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepublishOnly": "npm run build && npm run test && (npm run lint || true)",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "publish:beta": "npm version prerelease --preid=beta && npm publish --tag beta",
    "release": "npm run prepublishOnly && npm run publish:patch"
  },
  "bin": {
    "poolside": "./dist/index.js"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.66",
    "@octokit/rest": "^20.0.2",
    "ai": "^3.4.32",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.0",
    "jira-client": "^8.2.2",
    "markdown-table": "^3.0.3",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^2.1.8",
    "msw": "^2.10.3",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "workflow",
    "automation",
    "github",
    "jira",
    "ai",
    "cli",
    "poolside",
    "productivity"
  ],
  "author": "@alavkx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/poolside/poolside.git"
  },
  "homepage": "https://github.com/poolside/poolside#readme",
  "bugs": {
    "url": "https://github.com/poolside/poolside/issues"
  }
}
