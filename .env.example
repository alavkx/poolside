# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# OpenAI Configuration (for AI-powered release notes generation)
OPENAI_API_KEY=your_openai_api_key_here

# JIRA Configuration (optional - if not provided, JIRA integration will be skipped)
JIRA_HOST=your-company.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_PASSWORD=your_jira_api_token_or_password

# Optional: Default repository (can be overridden via CLI)
DEFAULT_REPO=owner/repository-name 
